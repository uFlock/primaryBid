{
	"name": "simple-api-server",
	"version": "1.0.0",
	"description": "Api Server for PrimaryBid Technical Task",
	"main": "index.js",
	"scripts": {
		"start-dev": "nodemon -L --delay 80ms --watch *.ts --exec ts-node src/index.ts",
		"start": "npm run build && node build/index",
		"nodemon": "nodemon",
		"build": "shx rm -rf ./build && tsc -p tsconfig.build.json",
		"test": "jest --watchAll --no-cache",
		"check-types": "tsc -p tsconfig.json --noEmit"
	},
	"author": "Vladimir Muzichuk",
	"license": "MIT",
	"dependencies": {
		"@types/ajv": "^1.0.0",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie-session": "^2.0.42",
		"@types/express": "^4.17.11",
		"@types/express-validator": "^3.0.0",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/mongoose": "^5.10.5",
		"ajv": "^8.4.0",
		"ajv-errors": "^3.0.0",
		"ajv-formats": "^2.1.0",
		"bcrypt": "^5.0.1",
		"cookie-session": "^1.4.0",
		"express": "^4.17.1",
		"express-async-errors": "^3.1.1",
		"express-validator": "^6.11.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.9",
		"nanoid": "^3.1.23",
		"rimraf": "^3.0.2",
		"supertest": "^6.1.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"./src/test/setup.ts"
		]
	},
	"devDependencies": {
		"@types/jest": "^26.0.23",
		"@types/supertest": "^2.0.11",
		"jest": "^26.6.3",
		"mongodb-memory-server": "^6.9.6",
		"nodemon": "^2.0.7",
		"shx": "^0.3.3",
		"ts-jest": "^26.5.6"
	}
}
